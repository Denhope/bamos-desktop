{
  appId: 'com.bamos.app',
  productName: 'Bamos',
  asar: true,
  directories: {
    output: 'release/${version}',
  },
  files: [
    'dist-electron',
    'dist',
    {
      from: 'node_modules/@napi-rs/canvas/',
      to: 'lib',
      filter: ['*.node'],
    },
    'node_modules/**/*',
  ],
  asarUnpack: ['lib/*.node', 'node_modules/pdfmake/build/vfs_fonts.js'],
  mac: {
    artifactName: '${productName}_${version}.${ext}',
    target: ['dmg', 'zip'],
  },
  win: {
    target: [
      {
        target: 'nsis',
        arch: ['x64'],
      },
    ],
    artifactName: '${productName}_${version}.${ext}',
  },
  nsis: {
    oneClick: false,
    perMachine: false,
    allowToChangeInstallationDirectory: true,
    deleteAppDataOnUninstall: false,
  },
  publish: {
    provider: 'github',
    private: true,
    owner: 'Denhope',
    repo: 'bamos-desktop',
    token: '${GH_TOKEN}',
  },
  npmRebuild: false,
  buildDependenciesFromSource: true,
  extraResources: [
    {
      from: 'node_modules/canvas/build/Release/',
      to: 'canvas/build/Release/',
      filter: ['*.node'],
    },
  ],
  linux: {
    target: ['AppImage', 'deb'],
    category: 'Office',
    icon: 'build/icons',
    desktop: {
      Name: 'Bamos',
      Comment: 'Plane System',
      Categories: 'Office;',
      Type: 'Application',
      Terminal: false,
      Icon: 'bamos',
    },
    artifactName: '${productName}_${version}.${ext}',
  },
}
